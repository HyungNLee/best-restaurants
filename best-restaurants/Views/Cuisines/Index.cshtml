@{
  Layout = "_Layout";
}

<h1>Cuisines</h1>
@if (@Model.Count == 0)
{
<h4>No cuisines have been made</h4>
}

@foreach (var cuisine in Model)
{
<h4><a href='/cuisines/@cuisine.GetId()'>@cuisine.GetName()</a></h4>
}

<a class="btn btn-info" href='/cuisines/new'>Add a new cuisine!</a>
<a class="btn btn-info" href="/restaurants">Back to Item List</a>
<a class="btn btn-info" href="/cuisines">Back to Cuisines List</a>
<a class="btn btn-info" href='/'>Back Home</a>
