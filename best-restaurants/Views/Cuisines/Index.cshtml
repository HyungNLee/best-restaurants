@{
  Layout = "_Layout";
}

<h1>Cuisines</h1>
@if (@Model.Count == 0)
{
<h4>No cuisines have been made</h4>
}

@foreach (var cuisine in Model)
{
<h4><a href='/cuisines/@cuisine.GetId()'>@cuisine.GetName()</a></h4>
}

<button class="btn btn-info"><a href='/cuisines/new'>Add a new cuisine!</a></button>
<button class="btn btn-info"><a href="/restaurants">Back to Item List</a></button>
<button class="btn btn-info"><a href="/cuisines">Back to Cuisines List</a></button>
<button class="btn btn-info"><a href='/'>back Home</a></button>
