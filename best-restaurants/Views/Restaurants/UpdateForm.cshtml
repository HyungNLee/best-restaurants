@{
  Layout = "_Layout";
}
<h1>Update Form</h1>
<hr />
<h2>Edit item: @Model["restaurant"].GetName()</h2>
<form action="/restaurant/@Model["restaurant"].GetId()/update" method="post">
    <label for="new-name">Name:</label>
    <input type="text" name="new-name" value="@Model["restaurant"].GetName()">
    <label for="new-city">City:</label>
    <input type="text" name="new-city" value="@Model["restaurant"].GetCity()">
    <select name="cuisine">
      @foreach (var cuisine in Model["cuisine"])
      {
        <option value=@cuisine.GetId()>@cuisine.GetName()</option>
      }
    </select>
    <button type="submit">Edit</button>
</form>
<button class="btn btn-dark"><a href=/restaurants/@Model["restaurant"].GetId()/delete>Delete</a></button>
<button class="btn btn-dark"><a href="/restaurants">Return to Restaurant Index</a></button>
