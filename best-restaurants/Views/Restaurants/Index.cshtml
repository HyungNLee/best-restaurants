@{
  Layout = "_Layout";
}
<p>Restaurant List</p>
@foreach (var restaurant in Model)
{
    <h4>@restaurant.GetName() | <a href="/restaurants/@restaurant.GetId()/update">Edit</a></h4>
}
<form action="/restaurants/sorted" method = "post">
<div class="form-group">
<select class="form-control" name="order" id="order">
<option>ASC</option>
<option>DESC</option>
</select>
</div>
<button type="submit" class="btn btn-info">Filter</button>
</form>
<button class="btn btn-info"><a href = "/restaurants/new">Add a new restaurant</a></button>

<button class="btn btn-info"><a href = "/restaurants/sorted">Sort restaurants</a></button>
